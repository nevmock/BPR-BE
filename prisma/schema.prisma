generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String 
  email     String   @unique
  password  String
  phone_number String?
  is_banned Boolean @default(false)
  subs_expired_at DateTime?
  subs_level Int @default(0)
  tax_percentage Float @default(0)
  verified_at DateTime?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  system_logs SystemLog[]
}

model SystemLog {
  id        String      @id @default(uuid())
  user_id String?
  ip_address String?
  device String?
  action String?
  method String?
  description String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user User? @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Otp {
  id        String      @id @default(uuid())
  email String
  otp_code Int
  expired_at DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
